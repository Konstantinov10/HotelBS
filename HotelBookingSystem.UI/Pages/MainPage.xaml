<Page x:Class="HotelBookingSystem.UI.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelBookingSystem.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="23" Margin="60,75,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="187"/>
        <Button x:Name="buttonLogin" Content="Log in" HorizontalAlignment="Left" Margin="60,148,0,0" VerticalAlignment="Top" Width="75" Click="buttonLogin_Click" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
        <Button x:Name="buttonRegistration" Content="Registration" HorizontalAlignment="Left" Margin="172,148,0,0" VerticalAlignment="Top" Width="75" Click="buttonRegistration_Click" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"/>
        <PasswordBox x:Name="passwordBoxPassword" HorizontalAlignment="Left" Margin="60,116,0,0" VerticalAlignment="Top" Width="187"/>
    </Grid>
</Page>
